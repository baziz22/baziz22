footer{
background-color: #0088a9; /* Green */
border-top-left-radius: 100px;
margin-left: 10%;
padding: 0 2% 0 5%;
border-top: 4px solid #436fac;
border-top: #fc6d6d;
font-size: clamp(0.5em, 1.5vw, 2em);

/* border: 3px solid pink; */
}
.footer-main-content {
    display: flex;
    padding: 10px 20px;
    
}
.footer-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin: 2px;
    padding: 0 15px;
}
.footer-left-and-center {
    display: flex;
    flex: 2;
}
.footer-about {
    flex: 2;
}
.copyright{
    color: #fc6d6d;
    margin-top: 2%;
}
.footer-social {
    margin-top: 2%;
}
.footer-social a span{
    height: 2.5em;
    width: 2.5em;
    /* background-color: #1a1a1a; */
    background-color: #fc6d6d;
    line-height: 30px;
    text-align: center;
    border-radius: 5px;
    transition: 0.3s;
}
.footer-social a span:hover{
    background: #f12020;
}
.footer-social a span:hover{
    background: var(--btntext);
}
.footer-content p{
    text-align: justify;
}
.footer-center {
    flex: 1;
    margin: 2px;
    padding: 2px;
}
.footer-right {
    margin: 2px;
}
.footer-right .footer-h2{
    padding-left: 10px;
}
.footer-h2{
    /* font-size: 1.125rem; */
    font-weight: 600;
    text-transform: uppercase;
    color: #fc6d6d;
    font-family: Tox, 'Courier New', Courier, monospace;
}


.footer-left .footer-content .footer-social {
    margin: 20px;
}
.footer-left .footer-content .footer-social a{
    padding: 0 2px;
}

.input-field {
    border-radius: 5px;
    height: 30px;
    width: 100%;
}
.footer-ta {
    border-radius: 5px;
    width: 100%;
    background-color: #ccc;
}
.footer-submit-btn {
    background: linear-gradient(to top right, #fc6d6d, #fc6d6d);

}